{
    "name": "glass-ion",
    "version": "0.0.0",
    "repository": "https://github.com/glassorg/glass-ion.git",
    "author": "Kris Nye <krisnye@gmail.com>",
    "license": "MIT",
    "main": "index.js",
    "scripts": {
        "build": "guild build && yarn run buildGrammar && guild build",
        "watch": "guild build && yarn run watchGrammar & guild watch & nodemon -w lib -w ionsrc -e js,ion --delay 150ms -x gtest lib",
        "watchGrammar": "nodemon -w src/parser.pegs -x yarn run buildGrammar",
        "buildGrammar": "pegs src/parser.pegs lib/parser.js"
    },
    "dependencies": {
        "@glas/build": "^0.2.6",
        "jsondiffpatch": "^0.3.11",
        "pegs": "^0.1.1"
    }
}
